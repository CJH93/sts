import com.fullstack.repository.BoardRepository;

@SpringBootTest
public class BoardImplTest {

	@Autowired
	private BoardService boardService;
	
	@Autowired
	private BoardRepository boardRepository;
	
	@Test
	public void regiTest()
	{
		Optional<Board> res = boardRepository.findById(100L);
		
		Board member = res.get();
		
		BoardDTO boardDTO = BoardDTO.builder()
				.title("유닛 테스트용 제목")
				.content("유닛 테스트용 내용")
				.writerEmail("user100@aaa.com")
				.build();
		
		System.out.println(boardService.register(boardDTO));
		
	}
}

